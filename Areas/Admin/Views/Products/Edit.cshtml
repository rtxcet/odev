@model Odev.Models.Products

@{
    ViewData["Title"] = "Ürün Güncelle";
}

<div class="container mt-4">
    <h2>Ürün Güncelle</h2>

  

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Ürün Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Fiyat</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Resim</label>
            <input type="file" name="img" class="form-control" />
            @if (!string.IsNullOrEmpty(Model?.Image))
            {
                <div class="mt-2">
                    <label>Mevcut Resim:</label><br />
                    <img src="@Model.Image" width="150" class="border" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Geri</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
