@model List<Odev.Models.Products>
@{
    ViewData["Title"] = "Ürünler";
}

<div class="container mt-4">
    <h2>Ürünler</h2>
    <a href="/Admin/Products/Create" class="btn btn-primary mb-3">Yeni Ürün</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Ad</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.Image" width="80" /></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price ₺</td>
                    <td>
                        <a class="btn btn-sm btn-warning" href="/Admin/Products/Edit/@item.Id">Düzenle</a>
                        <a class="btn btn-sm btn-danger" href="/Admin/Products/Delete/@item.Id" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
