@model Odev.Models.Contact

<section class="hero bg-dark text-white text-center py-5 ">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 data-aos="fade-up">İletişim</h1>
            </div>
        </div>
    </div>
</section>

<section class="contact-info py-5">
    <div class="container">
        <div class="row g-4 align-items-stretch">
            <!-- Sol Sütun -->
            <div class="col-md-6 d-flex">
                <div class="w-100 p-3 border rounded">
                    <h3 class="text-dark">İletişim Bilgileri</h3>
                    <p class="text-dark">
                        <i class="fas fa-map-marker-alt me-2 text-danger"></i>Trakya
                        Üniversitesi, Edirne, Türkiye
                    </p>
                    <p class="text-dark">
                        <i class="fas fa-phone me-2 text-danger"></i>
                        <a href="tel:+902842234567" class="text-dark text-decoration-none">+90 284 223 45 67</a>
                    </p>
                    <p class="text-dark">
                        <i class="fas fa-envelope me-2 text-danger"></i>
                        <a href="mailto:info@trakya.edu.tr"
                           class="text-dark text-decoration-none">info@trakya.edu.tr</a>
                    </p>
                    <div class="map-responsive mt-4">
                        <iframe src="https://www.google.com/maps/embed?pb=..." width="100%" height="300"
                                style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>

            <!-- Sağ Sütun -->
            <div class="col-md-6 d-flex">
                <div class="w-100 p-3 border rounded">
                    <h3 class="text-dark">Bize Mesaj Gönderin</h3>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Contact" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="Name" class="form-label text-dark">Adınız</label>
                            <input asp-for="Name" class="form-control bg-light text-dark border-secondary" id="Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Mail" class="form-label text-dark">E-posta</label>
                            <input asp-for="Mail" type="email" class="form-control bg-light text-dark border-secondary" id="Mail" required />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Description" class="form-label text-dark">Mesajınız</label>
                            <textarea asp-for="Description" class="form-control bg-light text-dark border-secondary" id="Description" rows="5" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-danger">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
